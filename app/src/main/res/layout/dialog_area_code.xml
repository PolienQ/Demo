<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_04"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/dialog_area_code_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="取消"
            android:textColor="@color/black_01"
            android:textSize="@dimen/margin_16"/>

        <TextView
            android:id="@+id/dialog_area_code_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:text="确认"
            android:textColor="@color/black_01"
            android:textSize="@dimen/margin_16"/>
    </RelativeLayout>

    <com.example.pnas.demo.ui.area.CityPicker
        android:id="@+id/dialog_area_code_city_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>