<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/area_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="点击选择省市区"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/area_code_btn"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/area_code_tv_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="省级"
            android:textColor="@color/black_01"
            android:textSize="@dimen/margin_30"/>

        <TextView
            android:id="@+id/area_code_tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="市级"
            android:textColor="@color/black_01"
            android:textSize="@dimen/margin_30"/>

        <TextView
            android:id="@+id/area_code_tv_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="区级"
            android:textColor="@color/black_01"
            android:textSize="@dimen/margin_30"/>

    </LinearLayout>

</RelativeLayout>