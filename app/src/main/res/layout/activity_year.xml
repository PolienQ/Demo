<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.example.pnas.demo.view.SmartTabLayout.SmartTabLayout
        android:id="@+id/year_view_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_customTabTextLayoutId="@layout/custom_tab_margin"
        app:stl_defaultTabTextMinWidth="120dp"
        app:stl_dividerColor="@android:color/transparent"
        app:stl_indicatorAlwaysInCenter="true"
        app:stl_indicatorColor="@android:color/transparent"
        app:stl_indicatorCornerRadius="1.5dp"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="3dp"
        app:stl_underlineColor="@android:color/transparent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/year_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>